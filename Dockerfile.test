ARG PY_VER=3.10
FROM python:${PY_VER}-slim-bullseye AS builder

WORKDIR /app

RUN apt-get update && \
    apt-get install -y --no-install-recommends build-essential && \
    rm -rf /var/lib/apt/lists/*

COPY requirements.lock .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir --timeout=600 --retries=3 -r requirements.lock

COPY . .
RUN pip install --no-cache-dir -e .[dev]  # [dev] for pytest and plugins

FROM python:${PY_VER}-slim-bullseye

WORKDIR /app

COPY --from=builder /usr/local /usr/local
COPY --from=builder /app /app

ENV PYTHONPATH=/app:/app/src:/app/ADK:/app/tests
ENV PYTHONUNBUFFERED=1

LABEL org.opencontainers.image.version="${PY_VER}" \
      org.opencontainers.image.source="https://github.com/Huyen1974/agent-data"

RUN groupadd -r tester && useradd -r -g tester tester
USER tester

HEALTHCHECK --interval=30s --retries=3 CMD python -c "import pytest, sys; sys.exit(0)"

CMD ["pytest", "--tb=short", "-v"] 