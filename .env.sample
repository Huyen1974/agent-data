# Agent Data Environment Configuration
# Copy this file to .env and update the values

# Runtime Configuration
RUN_DEFERRED=0
PYTHONDONTWRITEBYTECODE=1
PYTEST_TIMEOUT=8
BATCH_SIZE=3

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Qdrant Configuration
QDRANT_URL=https://your-qdrant-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
USE_QDRANT_MOCK=true

# Firestore Configuration
FIRESTORE_PROJECT_ID=your-firestore-project-id

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Test Configuration
PYTEST_MARKERS=--qdrant-mock
TEST_ENVIRONMENT=local

# MCP Configuration
MCP_SERVER_PORT=8000
MCP_LOG_LEVEL=INFO

# CI/CD Configuration
GITHUB_TOKEN=your-github-token
GCP_WORKLOAD_IDENTITY_PROVIDER=projects/PROJECT_NUMBER/locations/global/workloadIdentityPools/POOL_ID/providers/PROVIDER_ID
GCP_SERVICE_ACCOUNT=service-account@project.iam.gserviceaccount.com

# Storage Configuration
GCS_BUCKET=your-storage-bucket
FAISS_INDEX_PATH=./faiss_indices

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false

# Monitoring Configuration
ENABLE_MONITORING=true
LOG_LEVEL=INFO
METRICS_PORT=9090
